<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.Notifications"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="管理员登录"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:textColor="@color/material_orange"/>
        <EditText
            android:id="@+id/usr"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="请输入用户名"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:theme="@style/MyEditText"
            />
        <EditText
            android:id="@+id/psd"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:hint="请输入授权密码"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="numberPassword"
            android:theme="@style/MyEditText"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/check_declare"/>
            <TextView
                android:id="@+id/declaration"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:text="免责声明"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="5dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_forgot_password"
                android:layout_marginLeft="70dp" />
            <TextView
                android:id="@+id/forget_psd"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:text="忘记密码"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:text="登录"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
